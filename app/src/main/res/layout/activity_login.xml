<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/gredient_wave_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curve_button"
        android:backgroundTint="@color/dark"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/cardview_shadow_end_color"
            android:layout_margin="15dp"
            android:drawableEnd="@drawable/email"
            android:inputType="textEmailAddress"
            android:hint="Enter Your Email please"
            android:drawableRight="@drawable/email" />

        <EditText
            android:id="@+id/pass_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            app:backgroundTint="@color/cardview_shadow_end_color"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:drawableEnd="@drawable/ic_baseline_lock_24"
            android:hint="Enter Your Email please"
            android:drawableRight="@drawable/ic_baseline_lock_24" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:backgroundTint="@color/dark"
            android:id="@+id/btn_login"
            android:textAllCaps="false"
            android:textColor="#d3d8e3"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/gredient_wave_background_curve"
            android:gravity="center"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="20dp"
        android:background="@color/dark" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Don't have an accoutn? Register"
        android:textStyle="bold" />
</LinearLayout>